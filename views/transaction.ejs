<h1>Transactions for <%= user.username %></h1>

<div>
    <p>Here is your list of transactions!</p>
</div>

<div>
    <table>
        <tr>
            <td class="btnTD"><a class="btn btn-lg btn-primary" href="/transaction/summary">group by category</a></td>
            <td class="btnTD"><a class="btn btn-lg btn-primary" href="<%= '/transaction?sortBy=category' %>">sort by category</a></td>
            <td class="btnTD"><a class="btn btn-lg btn-primary" href="<%= '/transaction?sortBy=amount' %>">sort by amount</a></td>
            <td class="btnTD"><a class="btn btn-lg btn-primary" href="<%= '/transaction?sortBy=description' %>">sort by description</a></td>
        </tr>
    </table>
</div>

<div>
    <table>
        <thead>
            <tr>
                <th>Description</th>
                <th>Amount</th>
                <th>Category</th>
                <th>Date</th>
                <th>Delete</th>
                <th>Edit</th>
            </tr>
        </thead>
        <tbody>
            <% transactions.forEach((transaction) => { %>
                <tr>
                    <td><%= transaction.description %></td>
                    <td><%= transaction.amount %></td>
                    <td><%= transaction.category %></td>
                    <td><%= new Date(transaction.date).toLocaleDateString() %></td>
                    <td><a href="/transaction/remove/<%= transaction._id %>"><i class="bi bi-trash"></i></a></td>
                    <td><a href="/transaction/edit/<%= transaction._id %>"><i class="bi bi-pencil-square"></i></a></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</div>

<div>
    <form action="transaction" method="POST">
        <h1>Add a New Transaction</h1>
        <ul class="list-group newItemTable">
            <li class="list-group-item"><input type="text" name="description" placeholder="description"></li>
            <li class="list-group-item"><input type="text" name="category" placeholder="category"></li>
            <li class="list-group-item"><input type="number" step="0.01" name="amount" placeholder="amount"></li>
            <li class="list-group-item"><input type="date" name="date" placeholder="yyyy-mm-dd"></li>
        </ul>
        <input type="submit" value="store">
    </form>
</div>
